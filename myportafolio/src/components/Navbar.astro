---
const links = [
  {
    name: { en: "Home", es: "Inicio" },
    href: "#hero",
  },
  {
    name: { en: "About", es: "Sobre mí" },
    href: "#about",
  },
  {
    name: { en: "Projects", es: "Proyectos" },
    href: "#projects",
  },
  {
    name: { en: "Contact", es: "Contacto" },
    href: "#contact",
  },
];
---

<nav class="navbar">
  <div class="containerdiv">
    <!-- Logo / Name -->
    <a
      href="#hero"
      class="logo"
      style="display: flex; align-items: center; text-decoration: none;"
    >
      <img class="img-logo" src="/icon/iconsailor.png" />
    </a>

    <!-- Links -->
    <ul class="links">
      {
        links.map((link) => (
          <>
            <li data-lang="en">
              <a href={link.href} class="textlinks">
                {link.name.en}
              </a>
            </li>
            <li data-lang="es">
              <a href={link.href} class="textlinks">
                {link.name.es}
              </a>
            </li>
          </>
        ))
      }
      <form class="language-picker__form">
        <label
          for="language-picker-select"
          class="lang-label"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="icon-world"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M12 21a9.004 9.004 0 0 0 8.716-6.747M12 21a9.004 9.004 0 0 1-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 0 1 7.843 4.582M12 3a8.997 8.997 0 0 0-7.843 4.582m15.686 0A11.953 11.953 0 0 1 12 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0 1 21 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0 1 12 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 0 1 3 12c0-1.605.42-3.113 1.157-4.418"
            ></path>
          </svg>
        </label>
        <select
          name="language-picker-select"
          id="language-picker-select"
          class="lang-select"
          onchange="toggleLanguage(this.value)"
        >
          <option value="en">English</option>
          <option value="es">Español</option>
        </select>
      </form>
    </ul>
    <!-- Language Toggle -->
  </div>
</nav>

<style>
  .navbar {
    background-color: #0f172a;
    width: 100%;
    /* position: fixed; */
  }
  .img-logo {
    width: 3rem;
    height: 3rem;
    
  }
  .containerdiv {
    text-decoration: none;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 1rem 2rem;
  }
  .links {
    display: flex;
    flex-direction: row;
    gap: 3rem;
    list-style: none;
    font-weight: bold;
    align-items: center;
  }
  .textlinks {
    text-decoration: none;
    color: white;
    transition:
      transform 0.3s cubic-bezier(0.25, 0.8, 0.25, 1),
      box-shadow 0.3s;

  }
  .textlinks:hover {
    transform: translateY(-10px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    color: #FF92DE; /* Cambia el color al pasar el mouse */
  }
  .lang-label {
    font-size: 1.2rem;
    color: #fff; /* Cambia el color a blanco */
    font-weight: bold;
    margin-right: 0.3rem;
  }
  .language-picker__form {
    display: flex;
    align-items: center;
  }
  .lang-select{
    background-color:#0F172A ; /* Fondo oscuro */
    color: #fff; /* Texto blanco */
    border: none;
    
  }
   .language-picker__form {
    display: flex;
    align-items: center;
    gap: 0.3rem;
  }
  .lang-label {
    display: flex;
    align-items: center;
    margin-right: 0.2rem;
  }
  .icon-world {
    width: 1.5rem;
    height: 1.5rem;
    color: #fff;
    stroke: currentColor;
    min-width: 1.2rem;
    min-height: 1.2rem;
    vertical-align: middle;
  }
  .lang-select {
    background-color: #0F172A;
    color: #fff;
    border: none;
    font-size: 1rem;
    padding: 0.2rem 0.7rem;
    border-radius: 5px;
  }
  @media (max-width: 768px) {
    .navbar {
      width: 100% !important;
    }
    .links {
      gap: 1rem;
    }
    .textlinks {
      text-decoration: none;
      /* color: pink; */
      font-size: 0.5rem;
      display: flex;
      align-items: center;
    }
    .img-logo {
      width: 2rem;
      height: 2rem;
    }
    .icon-world {
      width: 1rem;
      height: 1rem;
    }
  .lang-select {
  
    font-size: 0.5rem;
    padding: 0;
    

  }
  .language-picker__form {
    gap: 0rem;
  }
  }
</style>
